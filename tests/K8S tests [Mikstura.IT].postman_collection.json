		{
			"name": "Am I famous?",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "06d93c0a-ceb6-4ead-a35d-9e2cf4a2d384",
						"type": "text/javascript",
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"JSON Response\", function () {",
							"    pm.response.to.have.jsonBody;",
							"    pm.response.to.be.json;",
							"});",
							"",
							"pm.test(\"Response has job_id field\", function () {",
							"    pm.expect(pm.response.json()).to.have.property('job_id');",
							"    pm.environment.set(\"JOB_ID\", pm.response.json().job_id);",
							"});",
							"",
							"function pausecomp(millis) {",
							"  var date = new Date();",
							"  var curDate = null;",
							"  do { curDate = new Date(); }",
							"  while(curDate-date < millis);",
							"}",
							"pausecomp(750)"
						]
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {},
				"url": {
					"raw": "http://{{API_BASE}}/am-i-famous?person=Albert",
					"protocol": "http",
					"host": [
						"{{API_BASE}}"
					],
					"path": [
						"am-i-famous"
					],
					"query": [
						{
							"key": "person",
							"value": "Albert"
						}
					]
				}
			},
			"response": []
